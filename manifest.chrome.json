{
  "manifest_version": 3,
  "name": "Moodle AI Assistant MVP",
  "version": "0.2.0",
  "description": "Assistive AI hints for Moodle quiz questions.",
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_title": "Moodle AI Assistant",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/mod/quiz/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
