{
  "manifest_version": 3,
  "name": "Moodle AI Assistant MVP",
  "version": "0.1.0",
  "description": "Assistive AI hints for Moodle quiz questions.",
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*/mod/quiz/*"],
      "js": ["dist/content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ]
}
